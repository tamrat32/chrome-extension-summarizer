{
  "manifest_version": 3,
  "name": "Quick Summarizer (Local)",
  "version": "1.0.0",
  "description": "Summarize selected text locally via context menu or popup. No API keys required.",
  "permissions": ["contextMenus", "activeTab", "scripting", "notifications", "storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Quick Summarizer",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
 // "icons": {
